# EditorConfig helps maintain consistent coding styles for multiple developers working on the same project across various editors and IDEs.
root = true  # This indicates that this is the root EditorConfig file. Stop searching for other EditorConfig files in parent directories.

# Global settings
[*]
indent_style = space  # Use spaces for indentation.
indent_size = 2  # Set the indentation size to 2 spaces.
end_of_line = lf  # Use Unix-style line endings (LF).
charset = utf-8  # Use UTF-8 as the character encoding.
trim_trailing_whitespace = true  # Remove any trailing whitespace characters.
insert_final_newline = true  # Ensure that files end with a newline.

# Specific rules for JavaScript and TypeScript files
[*.js, *.jsx, *.ts, *.tsx]
indent_size = 2  # Set the indentation size specifically for JS/TS files.

# Specific rules for JSON files
[*.json]
indent_size = 2  # JSON files should also use 2 spaces for indentation.
insert_final_newline = false  # JSON files may not require a final newline.

# Specific rules for Markdown files
[*.md]
trim_trailing_whitespace = false  # Allow trailing whitespace for Markdown files.
insert_final_newline = true  # Ensure that Markdown files end with a newline.

# Specific rules for YAML files
[*.yml, *.yaml]
indent_size = 2  # YAML files should use 2 spaces for indentation.
insert_final_newline = true  # Ensure that YAML files end with a newline.

# Specific rules for Dockerfile
[Dockerfile*]
indent_size = 4  # Dockerfiles typically use 4 spaces for indentation.
